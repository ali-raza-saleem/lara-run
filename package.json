{
  "name": "laravel-tinker-runner",
  "displayName": "Laravel Tinker Runner",
  "description": "Run PHP/Laravel Scripts directly from VS Code.",
  "version": "2.0.0",
  "publisher": "ali-raza-saleem",
  "repository": {
    "type": "git",
    "url": "https://github.com/ali-raza-saleem/laravel-tinker-runner.git"
  },
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:php",
    "onCommand:myExtension.runPhpFile",
    "onCommand:myExtension.clearOutput",
    "onCommand:myExtension.focusSearchBar"
  ],
  "main": "./dist/extension.min.js",
  "files": [
    "dist/",
    "assets",
    "resources/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "myExtension.runPhpFile",
        "title": "Run PHP File"
      },
      {
        "command": "myExtension.clearOutput",
        "title": "Clear Output"
      },
      {
        "command": "myExtension.focusSearchBar",
        "title": "Focus Search Bar"
      },
      {
        "command": "laravelTinker.removeCommand",
        "title": "Remove LaravelTinkerRun Command"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+r",
        "command": "myExtension.runPhpFile",
        "when": "editorLangId == php"
      },
      {
        "key": "ctrl+alt+c",
        "command": "myExtension.clearOutput",
        "when": "editorLangId == php || webviewFocus"
      },
      {
        "key": "ctrl+alt+f",
        "command": "myExtension.focusSearchBar",
        "when": "editorLangId == php || webviewFocus"
      }
    ],
    "menus": {},
    "configuration": {
      "title": "Laravel Tinker Runner",
      "properties": {
        "tinkerRunner.playgroundFolder": {
          "type": "string",
          "default": "tinker-playground",
          "description": "The folder inside the Laravel project where PHP files can be executed."
        },
        "tinkerRunner.appendOutput": {
          "type": "boolean",
          "default": true,
          "description": "If true appends new output to existing output, else replaces old output with new."
        }
      }
    }
  },
  "customConfig": {
    "tinkerScriptPath": "./resources/tinker.php"
  },
  "scripts": {
    "build": "webpack --mode production",
    "lint": "eslint src resources/js/ --ext .ts,.js --fix",
    "format": "prettier --write src resources/js/ resources/css/ ",
    "fix-style": "npm run format && npm run lint",
    "package": "npm run build && vsce package --out ./packages/",
    "package-patch": "npm version patch && npm run package",
    "package-minor": "npm version minor && npm run package",
    "package-major": "npm version major && npm run package"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vscode/test-electron": "^2.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "esbuild": "^0.25.1",
    "esbuild-loader": "^4.3.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "file-loader": "^6.2.0",
    "glob": "^11.0.1",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "thread-loader": "^4.0.4",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
